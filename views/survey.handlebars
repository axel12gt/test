<div class="container mt-5">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="form-group">
                <label for="smoke">Do you smoke?</label>
                <select name="smoke" class="form-control" id="smoke" style="max-width: 20%">
                    <option>Yes</option>
                    <option>No</option>
                </select>
            </div>
            <div class="form-group">
                <label for="drinks">How many times do you drink?(Per week)</label>
                <input class="form-control" id="drinks" type="number" style="max-width: 20%" min="1" oninput="validity.valid||(value='')" title="numbers only">
            </div>
            <div class="form-group">
                <label for="weight">How much do you weigh?</label>
                <input class="form-control" id="weight" type="number" style="max-width: 20%" min="1" oninput="validity.valid||(value='')" title="numbers only">
            </div>
            <div class="form-group">
                <label for="calories">How many calories do you ingest?</label>
                <input class="form-control" id="calories" type="number" style="max-width: 20%"min="1" oninput="validity.valid||(value='')" >
            </div>
            <div class="form-group">
                <label for="exercise">How much excercise do you do per week?(minutes)</label>
                <input class="form-control" id="exercise" type="number" style="max-width: 20%"min="1" oninput="validity.valid||(value='')" >
                <label for="mood">What's your mood?</label>
                <select class="form-control" id="mood" rows="1" style="max-width: 20%">
                    <option value="happy">happy</option>
                    <option value="content">content</option>
                    <option value="sad">sad</option>
                </select>
                <label for="race">What is your race?</label>
                <textarea class="form-control" id="race" id="race" rows="1" style="max-width: 20%"></textarea>
                <label for="gender">What is your gender?</label>
                <select class="form-control" id="gender" style="max-width: 20%">
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <label for="bmi">What is your bmi?</label>
                <input class="form-control" id="bmi" type="number" style="max-width: 20%" min="1" oninput="validity.valid||(value='')" title="numbers only">
                <label for="height">How tall are you?(inches)</label>
                <input class="form-control" id="height" type="number" style="max-width: 20%" min="1" oninput="validity.valid||(value='')" title="numbers only">
            </div>

        </div>
    </div>
</div>