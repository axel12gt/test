<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col"></div>
    </div>
</div>
<div class="container mt-5">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            {{!-- form-group --}}
            <form class="form-group" id="survey">
                {{!-- smoke --}}
                <label for="smoke">Do you smoke?</label>
                <select name="smoke" class="form-control" id="smoke" style="max-width: 20%">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
                {{!-- drinks --}}
                <label for="drinks">How many times do you drink?(Per week)</label>
                <input class="form-control" id="drinks" type="number" style="max-width: 20%" min="1"
                    oninput="validity.valid||(value='')" title="numbers only">
                {{!-- weight --}}
                <label for="weight">How much do you weigh?</label>
                <input class="form-control" id="weight" type="number" style="max-width: 20%" min="0"
                    oninput="validity.valid||(value='')" title="numbers only">
                {{!-- calories --}}
                <label for="calories">How many calories do you ingest?(Daily)</label>
                <input class="form-control" id="calories" type="number" style="max-width: 20%" min="0"
                    oninput="validity.valid||(value='')">
                {{!-- exercise --}}
                <label for="exercise">How much excercise do you do per week?(Minutes)</label>
                <input class="form-control" id="exercise" type="number" style="max-width: 20%" min="0"
                    oninput="validity.valid||(value='')">
                {{!-- mood --}}
                <label for="mood">What's your mood?</label>
                <select class="form-control" id="mood" rows="1" style="max-width: 20%">
                    <option value="0">happy</option>
                    <option value="1">content</option>
                    <option value="2">sad</option>
                </select>
                {{!-- race --}}
                <label for="race">What is your race?</label>
                <select class="form-control" id="race" id="race" rows="1" style="max-width: 20%">
                    <option value="05">Not releaseable</option>
                    <option value="02">Black</option>
                    <option value="03">AIAN</option>
                    <option value="04">Asian</option>
                    <option value="07">Multi-Race</option>
                    <option value="09">Hispanic</option>
                    <option value="01">White</option>
                </select>
                {{!-- gender --}}
                <label for="gender">What is your gender?</label>
                <select class="form-control" id="gender" style="max-width: 20%">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="apache helicopter">Apache Helicopter</option>
                </select>
                {{!-- height --}}
                <label for="height">How tall are you?(inches)</label>
                <input class="form-control" id="height" type="number" style="max-width: 20%" min="1"
                    oninput="validity.valid||(value='')" title="numbers only">
                <br>
                {{!-- onclick="window.location.href='#'" --}}
                <button type="submit" class="btn btn-primary" id="submitUser">Submit</button>
            </form>
        </div>
    </div>
</div>